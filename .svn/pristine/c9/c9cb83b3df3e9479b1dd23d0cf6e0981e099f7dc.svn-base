    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        ville = jTextField3.getText()+" ";
        region = jTextField2.getText()+" ";
        pays=jTextField1.getText()+" ";
        pat = Pattern.compile(exreg);
        
        if( (pat.matcher(pays)).matches() || (pat.matcher(region)).matches() || (pat.matcher(ville)).matches() ){
            jLabel4.setText("Présence de chiffres dans le mot");
        }
        else if(ville.length()==0 || region.length()==0 || pays.length()==0){
            jLabel4.setText("Champs vides");
        }
        else{
            try {
                vi = new Ville(Listes.getInstance().getNextVilleId(),ville, region, pays);
                vi.save();
                Listes.getInstance().getVilleList().add(vi);
                JOptionPane.showMessageDialog(this,"Ajout OK");
                this.dispose();
                ok=true;
            } catch (Exception ex) {
                Logger.getLogger(Ajouter_Ville.class.getName()).log(Level.SEVERE, null, ex);
                JOptionPane.showMessageDialog(this, ex);
            }
        }
    }//GEN-LAST:event_jButton1ActionPerformed

